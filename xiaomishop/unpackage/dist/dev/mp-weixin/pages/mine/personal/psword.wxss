.hreder {
  height: 100rpx;
  line-height: 100rpx;
  display: -webkit-inline-box;
  display: -webkit-inline-flex;
  display: -ms-inline-flexbox;
  display: inline-flex;
  width: 100%;
  background-color: #FAFAFA;
  border-bottom: 2rpx solid #DDDDDD;
}
.hreder .icon-2fanhui {
    font-size: 40rpx;
    text-indent: 25rpx;
}
.hreder .text {
    text-indent: 30rpx;
}
.main {
  width: 100%;
  height: 1212rpx;
  background-color: #F5F5F5;
  padding-top: 20rpx;
}
.main .flex {
    background-color: white;
    width: 100%;
    display: inline-block;
    padding-bottom: 5rpx;
}
.main .flex label {
      text-indent: 35rpx;
      width: 250rpx;
      float: left;
      line-height: 100rpx;
      color: #2C405A;
}
.main .flex input {
      height: 100rpx;
      line-height: 100rpx;
}
.main .text {
    font-size: 30rpx;
    text-align: center;
    color: #C8C7CC;
    line-height: 100rpx;
}
.main .footer {
    height: 100rpx;
    width: 90%;
    margin: auto;
    text-align: center;
    background-color: #FD6801;
    line-height: 100rpx;
    color: white;
}

